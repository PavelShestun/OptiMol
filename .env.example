# Environment variables for DataCon2025 Drug Discovery

# Project paths
PROJECT_ROOT="."
DATA_DIR="${PROJECT_ROOT}/data"
MODELS_DIR="${PROJECT_ROOT}/models"
RESULTS_DIR="${PROJECT_ROOT}/results"
LOGS_DIR="${PROJECT_ROOT}/logs"

# ChEMBL settings
CHEMBL_TARGET_ID="CHEMBL2069156"
CHEMBL_MAX_RECORDS=5000

# RDKit settings
RDHOME="/opt/rdkit"  # Path to RDKit installation

# Open Babel settings
BABEL_DATADIR="/usr/local/share/openbabel"

# Model settings
RANDOM_SEED=42
BATCH_SIZE=32
LEARNING_RATE=0.001
NUM_EPOCHS=200

# Computational resources
NUM_CPUS=8
NUM_GPUS=1
GPU_MEMORY_LIMIT="16GB"

# External API keys (if needed)
# UNCOMMENT AND FILL IF USING EXTERNAL SERVICES
# PUBCHEM_API_KEY="your_pubchem_api_key"
# PDB_API_EMAIL="your_email@example.com"

# Logging
LOG_LEVEL="INFO"
LOG_FORMAT="json"

# Docker settings (if using containers)
# DOCKER_IMAGE="datacon2025/drugdiscovery:latest"
# DOCKER_NETWORK="host"
